{
	"root": true,
	"env": {
		"browser": true,
		"node": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"indent": [ "error", "tab" ],
		"semi": [ "error", "always" ]
	},
	"overrides": [
		{
			"files": [ "*.ts", "*.tsx" ],
			"parser": "@typescript-eslint/parser",
			"extends": [
				"plugin:@typescript-eslint/eslint-recommended",
				"plugin:@typescript-eslint/recommended"
			]
		},
		{
			"files": [ "*.tsx" ],
			"rules": {
				"@typescript-eslint/explicit-function-return-type": "off"
			}
		}
	]
}
